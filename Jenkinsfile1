pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Terraform Init') {
      steps { sh 'terraform init' }
    }
    stage('Terraform Plan') {
      steps { sh 'terraform plan -var-file=terraform.tfvars' }
    }
    stage('Terraform Apply') {
      steps {
        input "Apply Changes?"
        sh 'terraform apply -auto-approve -var-file=terraform.tfvars'
      }
    }
  }
}
